{
  "name": "vite-react-electron",
  "private": true,
  "version": "0.0.0",
  "main": "./build/main.js",
  "scripts": {
    "build": "tsc && vite build",
    "preview": "vite preview",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "npx tsc --project tsconfig.main.json --watch",
    "dev:electron": "./wait-for http://localhost:4500 && cross-env NODE_ENV=development electronmon .",
    "dist:win": "npm build && npx tsc --project tsconfig.main.json && electron-packager --out=release .",
    "dist:mac": "npm build && npx tsc --project tsconfig.main.json && electron-packager --out=release .",
    "dist:linux": "npm build && npx tsc --project tsconfig.main.json && electron-packager --out=release .",
    "debug:electron": "cross-env NODE_ENV=development electronmon .",
    "fix:electron": "npx electron-fix start"
  },
  "dependencies": {
    "@emotion/css": "^11.9.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "less": "^4.1.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@emotion/babel-plugin-jsx-pragmatic": "^0.1.5",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^1.3.0",
    "autoprefixer": "^10.4.5",
    "babel-plugin-macros": "^3.1.0",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "electron": "^18.1.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-fix": "^1.1.3",
    "electron-packager": "^15.5.1",
    "electronmon": "^2.0.2",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.24",
    "twin.macro": "^2.8.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.5"
  }
}
